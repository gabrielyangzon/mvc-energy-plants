@model IEnumerable<mvc_energy_plants.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<h1>Project List</h1>

<p>
    <a asp-action="Create"><i class="material-icons" style="font-size:36px">note_add</i></a>
</p>

<form asp-controller="Projects" asp-action="Index">
    <p>
        Project Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PowerGeneration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PowerGeneration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Longitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>


                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="material-icons m-1">mode_edit</i></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><i style="color:green" class="material-icons m-1">info</i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i style="color:red" class="material-icons m-1">delete</i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

